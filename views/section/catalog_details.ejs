<form data-abide>
  <div class="name-field">
    <label>Escribe tu nombre <small>* requerido</small>
      <input type="text" required pattern="[a-zA-Z]+" placeholder="Ejemplo: Raúl">
    </label>
    <small class="error">Se requiere un nombre valido, no puede estar vacío.</small>
  </div>
  <div class="email-field">
    <label>Email <small>* requerido</small>
      <input type="email" required placeholder="Ejemplo: hola@impuestaria.com.mx">
    </label>
    <small class="error">Se requiere un correo valido.</small>
  </div>
  <button class="button tiny alert acceso" type="submit"><span class="splik_icon-heart2" type="submit"></span> Registrar</button>
</form>
